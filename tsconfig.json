{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "sourceMap": false,
    "lib": ["es6", "es7"],
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__",
    "**/src/types",
    "**/test"
  ],
  "include": [
    "packages/*/src/**/*"
  ]
}
